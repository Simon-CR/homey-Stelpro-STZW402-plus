{
  "id": "com.stelpro",
  "name": {
    "en": "Stelpro"
  },
  "version": "1.0.1",
  "compatibility": ">=10.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "description": {
    "en": "Stelpro Z-Wave devices support for Homey."
  },
  "category": "climate",
  "brandColor": "#00549F",
  "author": {
    "name": "Simon Cloutier",
    "email": "scr_homey@cloutier.one"
  },
  "permissions": [],
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "capabilities": {
    "stelpro_thermostat_state": {
      "type": "string",
      "title": {
        "en": "State"
      },
      "getable": true,
      "setable": false
    }
  },
  "drivers": [
    {
      "id": "stelpro_stzw402_plus",
      "name": {
        "en": "Stelpro Ki Thermostat (STZW402+)"
      },
      "class": "thermostat",
      "images": {
        "large": "drivers/stelpro_stzw402_plus/assets/images/large.jpg",
        "small": "drivers/stelpro_stzw402_plus/assets/images/small.jpg"
      },
      "capabilities": [
        "measure_temperature",
        "target_temperature",
        "thermostat_mode",
        "stelpro_thermostat_state"
      ],
      "capabilitiesOptions": {
        "thermostat_mode": {
          "values": [
            "off",
            "heat",
            "eco"
          ]
        },
        "stelpro_thermostat_state": {
          "title": {
            "en": "State"
          }
        }
      },
      "zwave": {
        "manufacturerId": 569,
        "productTypeId": 1,
        "productId": 1,
        "learnmode": {
          "instruction": {
            "en": "Press the Up and Down buttons simultaneously for 3 seconds to enter inclusion mode."
          }
        },
        "associationGroups": [
          1
        ]
      }
    }
  ],
  "flow": {
    "actions": [
      {
        "id": "set_outside_temperature",
        "title": {
          "en": "Set outside temperature"
        },
        "titleFormatted": {
          "en": "Set outside temperature to [[temperature]]°C"
        },
        "args": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Temperature (°C)"
            }
          }
        ]
      }
    ]
  }
}